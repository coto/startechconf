
// ad-hoc gradient helper

background-gradient(from, to)
  background -moz-linear-gradient(top, from, to) to
  background -webkit-gradient(linear, left top, left bottom, from(from), to(to)) to
  background linear-gradient(top, from, to) to

// cloudapp-style button

cloudapp-button()
  user-select none
  background #eaeaea
  background-gradient #efefef #d8d8d8
  border 1px solid #ababab
  border-radius 3px
  box-shadow 0 1px 2px rgba(0, 0, 0, .1), 0 1px 1px rgba(255, 255, 255, .8) inset
  color #707070
  font-family 'Helvetica Neue', Helvetica, Arial, Geneva, sans-serif
  font-size 12px
  font-smoothing antialiased
  font-weight bold
  margin 0
  outline none
  padding 5px 10px
  text-align center
  text-shadow 0 1px 1px rgba(255, 255, 255, .5)

  &:hover
    background #f1f1f1
    background-gradient #f6f6f6 #e3e3e3
    cursor pointer

  &:focus
    background-gradient #f6f6f6 #e3e3e3
    border 1px solid #80bfff
    box-shadow 0 0 3px #80bfff, 0 1px 1px rgba(255, 255, 255, .8) inset

  &:active
  &.active
    background #e3e3e3
    background-gradient #e3e3e3, #f6f6f6
    box-shadow none

  &:disabled
  &.disabled
    background #efefef !important
    border 1px solid #d1d1d1 !important
    box-shadow none !important
    color #aaa !important
    cursor default
    text-shadow 0 1px 1px #fff !important
