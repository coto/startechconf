h2 Master
#master

ul#notifications

h2 
  | Workers
  .actions
    a(href='#').action#remove-worker -
    a(href='#').action#add-worker +

#workers

script#master-template(type='text/template')
  .stats
    span.stat.restarts
      strong restarts
      em {master.stats.restarts}
    span.stat.cpus
      strong workers / cpus
      em {master.workers} / {master.os.cpus}
    span.stat.workers
      strong workers
      em {master.stats.workersSpawned} spawned, 
      em {master.stats.workersKilled} deaths

script#worker-template(type='text/template')
  .worker
    .summary
      span.id {worker.id}
      .stats
        span.stat.connections.active 
          strong connections
          em {worker.stats.connectionsActive}
        span.stat.connections.total 
          strong total
          em {worker.stats.connectionsTotal}
        span.stat.requests.total
          strong requests
          em {worker.stats.requestsTotal}
    .body
      .chart

script#request-template(type='text/template')
  span.method {request.method}
  span.url {request.url}

script#overlay-template(type='text/template')
  .overlay
    span.message {overlay.message}
